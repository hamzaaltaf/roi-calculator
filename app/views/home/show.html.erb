  <script>
    $(document).ready(function() {
      $("[id^=roi__calc__]").change(function(){
        
        var issues = $("#roi__calc__issues").val();
        var locations = $("#roi__calc__locations").val();
        var manual_checks = $("#roi__calc__manual_checks").val();
        var wage = $("#roi__calc__wage").val();
        var pieces = $("#roi__calc__pieces").val();
        var bill = $("#roi__calc__bill").val();
        var exhausts = $("#roi__calc__exhausts").val();
        var aircons = $("#roi__calc__aircons").val();
        var freezers = $("#roi__calc__freezers").val();
        var chillers = $("#roi__calc__chillers").val();
        
        $.ajax({
          url: "/calculate",
          type: "POST",
          data: {issues: issues, locations: locations, manual_checks: manual_checks, wage: wage, pieces: pieces, bill: bill, exhausts: exhausts, aircons: aircons, freezers: freezers, chillers: chillers},
          success: function (data, status, jqXHR) {
            console.log(data)
            if (data.error == true) {
              console.log(data.field)
              $(data.field).css('border', "1px solid red");
              $("#saving_value").html(data.total);  
            } else {
              $("#saving_value").html(data.total);
              $("[id^=roi__calc__]").each(function() {
                $(this).css('border', "1px solid #969CD7");
              });
              $("[id^=roi__calc__error__]").each(function() {
                $(this).html("");
              });
              
              
            }
            
          },
          error: function (jqXHR, status, err) {
            alert("Local error callback.");
          },
          complete: function (jqXHR, status) {
          }
        })
      });
      });
  </script>
